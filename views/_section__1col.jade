//-bof variables
block metas
	include partials/_section-page__vars.jade

extends _pages/_layout-section-page--notabs.jade 

//-the main copy that for this page
block copy
	h1.c-header__title
		span #{heading}
	.c-main-content__copy
		!= marked(copy)


//-name the tabs in the subnav
block tab1
	if (subtype1)
		if (language=="en")
			span= subtype1.fields.name_en
		else
			span= subtype1.fields.name_es


//- insert the content in the tab content blocks
//- tab1 content
block tab1Content
	if (subtype1)
		if (whatToShow == "Business Units")
			+c-place-list(subtype1, places, subtype1.sys.id, language)
		else
			+c-pages-list(subtype1, pages, subtype1.sys.id, language)


