include ../mixins/_mixins.jade
- var language          = "es"
- var website_root      = "https://el.holboxeno.com"
- var today_events      = contentful.todaysEvents
- var past_events       = contentful.pastEvents
- var tomorrow_events   = contentful.tomorrowsEvents
- var future_events     = contentful.futureEvents
- var places            = contentful.businesses
- var pages             = contentful.pages
- var buildDate         = new Date().toISOString()

//- allEvents = []
//- allEvents = allEvents.push(contentful.buildDatesEvents)
//- allEvents =  allEvents.push(past_events)
//- allEvents =  allEvents.push(tomorrow_events)
//- allEvents =  allEvents.push(future_events)

doctype xml
urlset(
    xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9            http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd"
    )
    //- Home page
    url
        loc !{website_root}
        lastmod #{buildDate}
        changefreq daily
        priority= 0.8

    //-events
    url
        loc !{website_root}/que-hacer-en-holbox
        lastmod #{buildDate}
        changefreq daily
        priority= 0.8

    //-food drink
    url
        loc !{website_root}/food-drink-in-holbox/
        lastmod #{buildDate}
        changefreq weekly
        priority= 0.8

    //-buses
    url
        loc !{website_root}/como-llegar-a-holbox-horarios-autobuses-traslados-renta-auto-taxis-vuelos
        lastmod #{buildDate}
        changefreq daily
        priority= 0.8

    //-new ferry time
    url
        loc !{website_root}/horario-ferries-isla-holbox
        lastmod #{buildDate}
        changefreq daily
        priority= 0.8

    


    //- permanent redirects remove before 6 months

    //-ferry times june 8 2017
    url
        loc !{website_root}/como-llegar-a-holbox-traslados-ferries-autobuses-y-vuelos
        lastmod  #{buildDate}
        changefreq always
        priority= 1

    //-health beauty june 8 2017
    url
        loc !{website_root}/salud-belleza-y-tratamientos-holisticos/
        lastmod  #{buildDate}
        changefreq always
        priority= 1




    //- page types
    +sitemap__entry--page-types(contentful.pageTypes,language,'weekly','0.7')

    //- //-section pages 
    +sitemap__entry--business-types(contentful.businessTypes,language,'weekly','0.7')

    //-pages 
    +sitemap__entry(contentful.pages,language,'weekly','1')


    //-events 
    +sitemap__entry(contentful.repeatEvents,language,'weekly','1')

    //-events 
    +sitemap__entry(contentful.todaysEvents,language,'daily','1')

    //-events tomorrow
    +sitemap__entry(contentful.tomorrowsEvents,language,'daily','1')

    //-events past events
    +sitemap__entry(contentful.pastEvents,language,'daily','1') 

    //-events day three 
    +sitemap__entry(contentful.dayThreeEvents,language,'daily','1') 

    //-events day Four 
    +sitemap__entry(contentful.dayFourEvents,language,'daily','1') 

    //-events future 
    +sitemap__entry(contentful.futureEvents,language,'daily','1') 

    //- places 
    +sitemap__entry(places,language,'weekly','0.9') 

