block metas

+metaImages(hero_image)

meta(charset='utf-8')
title #{title}
meta(http-equiv='content-language', content='#{language}')
meta(name='B-verify' content='916aea6eabfedc84396a197015c2a0bdae2b9bfe')
<link rel="alternate" href='#{spanish_url}' hreflang="es_MX" />
<link rel="alternate" href='#{english_url}' hreflang="en_US" />
if keywords
	meta(name='keywords', content='#{keywords}')
else
	meta(name='keywords', content='')
meta(name='description', content='#{description}')
if og_title && og_description
	meta(name='og:title', content='#{og_title}')
	meta(name='og:type', content='website')
	meta(name='og:description', content='#{og_description}')
	if og_image	
		meta(name='og:image', content='#{og_image}')
	meta(name='og:url', content='#{og_url}')
	meta(name='og:locale', content='#{language}')
	meta(name='og:locale:alternate', content='#{language_alt}')
else 
	meta(name='og:title', content='#{title}')
	meta(name='og:type', content='website')
	meta(name='og:description', content='#{description}')
	if og_image	
		meta(name='og:image', content='https:#{og_image}')
	meta(name='og:url', content='#{og_url}')
	meta(name='og:locale', content='#{language}')
	meta(name='og:locale:alternate', content='#{language_alt}')

if twitter_title && twitter_description
	if twitter_image 
		meta(name='twiter:card', content='summary_large_image')
	else
		meta(name='twiter:card', content='summary')
	meta(name='twitter:site', content='#{twitter_site}')
	if twitter_title
		meta(name='twitter:title', content='#{twitter_title}')
	if twitter_description
	meta(name='twitter:description', content='#{twitter_description}')
	if twitter_image	
		meta(name='twitter:image', content='https:#{twitter_image}')
		meta(name='twitter:image:alt', content='#{twitter_image_alt}')
else 
	if twitter_image 
		meta(name='twiter:card', content='summary_large_image')
	else
		meta(name='twiter:card', content='summary')
	meta(name='twitter:site', content='#{twitter_site}')
	meta(name='twitter:title', content='#{title}')
	meta(name='twitter:description', content='#{description}')
	if twitter_image	
		meta(name='twitter:image', content='#{twitter_image}')
		meta(name='twitter:image:alt', content='#{twitter_image_alt}')
meta(name='viewport', content='width=device-width, initial-scale=1.0, minimal-ui')
//- add robot instructions
if robots
	meta(name='robots', content='#{robots}')
//- add metadata error classes for error pages
if bodyClasses =="404"
	meta(name='errortype' content='404 - Not Found')
	meta(name='errorpage' content='true')

meta(name='apple-mobile-web-app-capable', content='yes')
meta(name='viewport', content='width=device-width, initial-scale=1, minimal-ui')
