//- layout.jade
//- layout page for all of our 404 pages
//- they are all composed of 
//- 
//-  |HTML
//-  |__head
//-  |__body 
//- 	|__.wrapper
//- 	|	|__.c-header--heroimage
//- 	|	|__._c-main-content--gate
//- 	|	|__._c-tabs
//- 	|	|__._c-footer
//- 	|___ _c-navigation
//- 	|__end (where we put all of our javascript before the closing body tag)

//- load the mixins
include ../mixins/_mixins.jade

//- set the doctype
doctype html
//- start HTML
html
	//- load the head 
	head
		//- and the partial with all of the meta
		meta(name='B-verify' content='916aea6eabfedc84396a197015c2a0bdae2b9bfe')
		include ../partials/_head.jade
	body(class=bodyClasses)

		
		.wrapper

			include ../components/c-header/_c-header--404-bilingual.jade

			include ../components/_c-main-content--404.jade

			include ../partials/_c-footer.jade

		//-include ../components/_c-navigation.jade

		include ../partials/_end.jade

		
