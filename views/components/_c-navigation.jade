//- c-navigation
//- the main navigation for the website
//- should be all in one piece
//- 	has two states:
//- 	.is--collapsed
//- 	.is--extented


mixin c-list__navigation--item(tierClass,sizeClass,bodyClass,url_en,url_es,string_en,string_es)
	- mininavbuttonClass =  'c-mininav__button--'+ bodyClass
	if (language == "en") 
		- url= url_en
		- string = string_en
	else
		- url= url_es
		- string = string_es

	- listItemClass =tierClass +" "+ sizeClass +" "+ bodyClass
	li(class=listItemClass)
		a.c-mininav__button(class=mininavbuttonClass href=url)
			if block 
				block
			=string

//-bof mininav
.c-mininav__container.is-collapsed
	ul.c-mininav
		//- language togglers
		if (language == "en") 
			li.c-mininav__languages: a.c-mininav__button.c-mininav__button--language.language__spanish(href="#{locale}")
				.language__label
					| Cambiar a
				img.language__icon(src="/images/language__es2.svg" alt="Espa√±ol")
		else
			li.c-mininav__languages: a.c-mininav__button.c-mininav__button--language.language__english(href="#{locale}")
				.language__label
					| Switch to
				img.language__icon(src="/images/language__en.svg" alt="English")

		li.c-list__navigation
			ul.c-list__flexbox
				//- home
				+c-list__navigation--item(
					"single",
					"",
					"home",
