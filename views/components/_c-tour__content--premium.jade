

//- this file builds the content for tour--premium pages
//- single__content
section.c-block.c-single__content
	.c-block__column

		.c-single__quicklook
			.c-quicklook__line1
				if cost_low
					- priceOf = {en:"From: ",es:"Desde: "};
					if (language == "en")
						span.c-label #{priceOf.en} 
					else 
						span.c-label #{priceOf.es} 
					| #{cost_low}

			.c-quicklook__line2
					
		//- the copy
		.c-main-content__copy
			if copy
				!= marked(copy)

		//-recomendations
		.c-single__recommendations
			if entry.sys.id == "6NTKfKlQYMY0sEsIWaQk86"
				h3.c-recomendations__title
				if (language == "en")
					| Book now
				else 
					| Reserva ya
				
				+all-transfer-blocks
			else
				h3.c-recomendations__title
				if (language == "en")
					| Prices
				else 
					| Precios
				!= marked(recomendation)

		//- single details
		.c-single__details
			.c-single__amenities
				if capacity
					if (language == "en")
						span.c-label 
							| CAPACITY: 
						| #{capacity}
						
					else
						span.c-label 
							| CAPACIDAD: 
						| #{capacity}
						
				.show-for-small-only
					br
				if amenities
					if entry.sys.id ==! "6NTKfKlQYMY0sEsIWaQk86"
						+business-unit__ammenities-loop(amenities)


			if opening_time
				.c-single__hours 
					if (language == "en")
						span.c-label Opening Times: 
					else 
						span.c-label Horario: 
					| #{opening_time}
			
			+c-single__contactinfo
					
 
			#map
			include _c-map--listing.jade	
			
			//-feature box mixin
			+c-single__featurebox

		

		//- c-single__events
		//- set up what you will for all of the events
		block c-single__events

			



				
